<Window x:Class="hotel_management_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotel_management_system"
        mc:Ignorable="d"
        Title="hotel management" Height="600" Width="800" Background="#FF5B7DC1">
    <Viewbox>

        <Grid Height="583" Width="800">
            <Grid.Background>
                <ImageBrush ImageSource="/Group 7.png" Stretch="Fill"/>
            </Grid.Background>
            <Label Content="Username" HorizontalAlignment="Left" Height="26" Margin="539,174,0,0" VerticalAlignment="Top" Width="126" FontSize="14"/>
            <Label Content="Password" HorizontalAlignment="Left" Height="32" Margin="539,238,0,0" VerticalAlignment="Top" Width="126" FontSize="14"/>
            <Label Content="Change Password" HorizontalAlignment="Left" Height="26" Margin="539,308,0,0" VerticalAlignment="Top" Width="108" BorderBrush="#FFB0B0B0" Foreground="#FF070707"/>
            <PasswordBox HorizontalAlignment="Left" Height="30" Margin="548,262,0,0" VerticalAlignment="Top" Width="218" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="#FF5B7DC1" CaretBrush="#FF155574" Foreground="White" SelectionTextBrush="#FF4994B9"/>
            <Label Content="English" HorizontalAlignment="Left" Height="26" Margin="679,308,0,0" VerticalAlignment="Top" Width="87" Background="{x:Null}" Foreground="White" OpacityMask="#FFB0B0B0"/>
            <Label Content="Login" HorizontalAlignment="Left" Height="32" Margin="548,384,0,0" VerticalAlignment="Top" Width="218" Background="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" FontSize="14"/>
            <TextBox HorizontalAlignment="Left" Height="30" Margin="548,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="#FF5B7DC1" CaretBrush="#FF155574" Foreground="White" SelectionTextBrush="#FF4994B9"/>

        </Grid>
    </Viewbox>

</Window>
