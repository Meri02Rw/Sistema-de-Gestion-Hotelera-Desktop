<UserControl x:Class="hotel_management_system.Inicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="720" Width="1280">

    <Viewbox>

        <Grid Height="720" Width="1280">
            <Grid.Background>
                <ImageBrush ImageSource="/img/Group7.png" Stretch="Fill"/>
            </Grid.Background>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <Button Content="Gestor de Reservas" 
            Width="200" 
            Height="50" 
            Margin="10" 
            Click="GestorReservas_Click"/>
                <Button Content="Room Matrix" 
            Width="200" 
            Height="50" 
            Margin="10" 
            Click="RoomMatrix_Click"/>
                <Button Content="Crear Reservas" 
            Width="200" 
            Height="50" 
            Margin="10" 
            Click="CrearReservas_Click"/>
            </StackPanel>
            <TextBlock x:Name="MessageBox" Foreground="#FF01688C" Margin="870,526,47,147" FontSize="15"/>

        </Grid>
    </Viewbox>

</UserControl>
